---
import { getUrlOfTheComponent } from '@/utils/functions';

const fileAnchor = getUrlOfTheComponent({ theURL: import.meta.url });
const containerClassName = 'container-camera-kit';
---

<section class={`am-section ${containerClassName}`}>
  <a class='title-of-section' href={fileAnchor} target='_blank'>#20</a>
</section>

<script>
  import { $ } from '@/utils/functions';
  import { Pane } from 'tweakpane';
  import * as CamerakitPlugin from '@tweakpane/plugin-camerakit';

  const params = {
    ringValue: 1.0,
    scaleValue: 2.0,
    wideValue: 0.5,
    wheelValue: 50
  };

  const container = $(`.${'container-camera-kit'}`) as HTMLElement;
  const pane = new Pane({ container });

  pane.registerPlugin(CamerakitPlugin);
  pane.element.classList.add('my-pane');

  // Ring input
  pane.addBinding(params, 'ringValue', {
    view: 'cameraring',
    series: 0
  });

  // Ring con escala
  pane.addBinding(params, 'scaleValue', {
    view: 'cameraring',
    series: 0,
    unit: {
      pixels: 50,
      ticks: 10,
      value: 0.2
    },
    min: 1,
    step: 0.02
  });

  // Ring ancho (wide)
  pane.addBinding(params, 'wideValue', {
    view: 'cameraring',
    series: 0,
    wide: true
  });

  // Wheel input
  pane.addBinding(params, 'wheelValue', {
    view: 'camerawheel',
    amount: 100
  });
</script>
