---
import { getUrlOfTheComponent } from '@/utils/functions';
const fileAnchor = getUrlOfTheComponent({ theURL: import.meta.url });
const containerClassName = `binding-range`;
---

<section class=`am-section ${containerClassName}`>
  <a
    class='title-of-section'
    href={`https://github.com/20essentials/project-1168/blob/main/src/components/BindingRange.astro`}
    target='_blank'>#2</a
  >
</section>

<script>
  import { $ } from '@/utils/functions';
  import { Pane } from 'tweakpane';
  const container = $('.binding-range') as HTMLElement;
  const PARAMS = {
    speed: 0.5
  };
  const pane = new Pane({ container });
  pane.element.classList.add('my-pane');
  pane.addBinding(PARAMS, 'speed', { min: 0, max: 100 });
</script>
